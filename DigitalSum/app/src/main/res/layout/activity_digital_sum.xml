<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="sci.ro.classexercices.c1.DigitSumActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/digitInput"
            android:layout_weight="2"
            android:inputType="numberDecimal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/sum_out_put"
            android:layout_weight="8"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/compute"
        android:text="Compute" android:onClick="compute"/>

</LinearLayout>
